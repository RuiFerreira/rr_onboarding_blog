<%# local stops form submittion using ajax requests which is the default behaviour %>
<%= render 'shared/form_errors', failed_operation: @tag %>
<%= form_with(model: @tag, local: true, class: "w-100") do |f| %>
  <div class="row my-4 w-100">
    <div class="col-auto">
      <%= f.label :name, class: "form-label" %>
    </div>
    <div class="col-12">
      <%= f.text_field :name, placeholder: "Name of the tag", class: "form-control" %>
    </div>
  </div>
  <div class="row mt-4 w-100 justify-content-end">
    <div class="col-auto">
      <%= f.submit class: "btn btn-secondary" %>
    </div>
    <div class="col-auto">
      <%= link_to 'Cancel', tags_path, class: "btn btn-outline-secondary" %>
    </div>
    
  </div>
<% end %>

