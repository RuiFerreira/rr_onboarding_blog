<%= form_with(model: @article, url: articles_path(:search_content,:filter_type), method: :get, local: true, class: "w-100") do |f| %>
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <%= f.text_field :search_content, placeholder: "Search for tags or authors", class: "form-control" %>
    </div>
    <div class="col-6 col-md-2">
      <%= f.submit 'Search', class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>