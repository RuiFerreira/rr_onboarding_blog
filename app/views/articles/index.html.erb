
<div class="page-content row justify-content-center">
  <div class="col-12 text-center">
    <h2>Articles</h2>
  </div>
  <% @articles.each do |article|%>
    <div class="col-12 col-md-7 h-100 p-5 bg-light border rounded-3 my-2">
      <div class="row">
        <div class="col-auto">
          <h4><%= link_to article.title, article_path(article), class: 'article-title text-dark' %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <p><%= article.body %></p>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-3 text-center">
          <p><%= article.status %></p>
        </div>
        <div class="col">
          Written by: <%= article.user.username %>
        </div>
        <div class="col-2">
          <%= link_to 'Edit', edit_article_path(article) %>
        </div>
        <div class="col-2">
          <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Confirm deletion of article \"#{article.title.capitalize}\"?"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>